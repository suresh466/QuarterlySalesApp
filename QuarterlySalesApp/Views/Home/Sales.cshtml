@model IEnumerable<QuarterlySalesApp.Models.Sales>

@{
    ViewData["Title"] = "Sales Data";
}

<h1>Sales Data</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<p>
    <a asp-action="AddSales">Add New Sales Data</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Year</th>
            <th>Quarter</th>
            <th>Employee</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Year</td>
                <td>@item.Quarter</td>
                <td>@item.Employee.FullName</td>
                <td>@item.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>