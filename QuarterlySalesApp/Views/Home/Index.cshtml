@model IEnumerable<QuarterlySalesApp.Models.Sales>

@{
    ViewData["Title"] = "Quarterly Sales";
}

<h1>Quarterly Sales</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="form-group">
        <label for="employeeId">Employee:</label>
        <select name="employeeId" asp-items="ViewBag.Employees" class="form-control">
            <option value="">All Employees</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Year</th>
            <th>Quarter</th>
            <th>Employee</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Year</td>
                <td>@item.Quarter</td>
                <td>@item.Employee.FullName</td>
                <td>@item.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No sales data available.</p>
}
else
{
    <p>Total Sales: @Model.Sum(s => s.Amount).ToString("C")</p>
}